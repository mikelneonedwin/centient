{
    "include": [
        "**/*.ts",
        "**/*.js",
    ],
    "exclude": [
        "node_modules",
        "public",
        "dist"
    ],
    "compilerOptions": {
        "checkJs": true,
        "types": [
            "./index.d.ts"
        ],
        "target": "es2017",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "react"
            }
        ]
    }
}